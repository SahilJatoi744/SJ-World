@model List<Shopping_Cart.Models.category>
@{
    ViewBag.Title = "ListCategory";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}
<br />


<center><h2>ListCategory</h2></center>
<br /><br />

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
            {
<tr>
    <td>@item.Id</td>
    <td>@item.Name</td>
    <td><a href="@Url.Action("DeleteCategory","Admin",new { id=item.Id})" class="btn btn-danger"><i class="fas fa-trash"></i></a>|<a href="@Url.Action("EditCategory","Admin",new { id=@item.Id})" class="btn btn-info"><i class="fas fa-edit"></i></a></td>
</tr>
            }
    </table>

